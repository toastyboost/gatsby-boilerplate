{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/shared/*": [
        "./shared/*",
      ],
      "@/shared/ui/atoms": [
        "./shared/ui/atoms/*",
      ],
    },
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "gatsby-config.tsx",
    "./plugins/**/*"
  ]
}